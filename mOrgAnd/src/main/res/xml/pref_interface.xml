<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_group_outline">

        <CheckBoxPreference
            android:key="show_drawers"
            android:defaultValue="false"
            android:summary="@string/preference_show_drawers_summary"
            android:title="@string/preference_show_drawers"/>

        <CheckBoxPreference
            android:key="show_settings"
            android:defaultValue="false"
            android:summary="@string/preference_show_settings_summary"
            android:title="@string/preference_show_settings"/>

        <CheckBoxPreference
            android:key="outline_expandall"
            android:defaultValue="false"
            android:summary="@string/preference_outline_expandall_summary"
            android:title="@string/preference_outline_expandall"/>

    </PreferenceCategory>

</PreferenceScreen>
